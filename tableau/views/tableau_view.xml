<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="default_users_tableau" model="ir.ui.view">
            <field name="name">Tableau par défaut</field>
            <field name="model">res.users</field>
            <field name="type">tableau</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml" >
		<tableau>
                      <h1> Les prunes c'est bon!</h1>
		      <div>
                           <dash/>
                      </div>
                </tableau>
	    </field>
        </record>      

        <record id="default_tasks_tableau" model="ir.ui.view">
            <field name="name">Tableau par défaut</field>
            <field name="model">project.task</field>
            <field name="type">tableau</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml" >
		<tableau>
                      <h1> Les poires c'est bon!</h1>
		      <div>
                           <dash/>
                      </div>
                </tableau>
	    </field>
        </record>      

        <!-- List of users -->
                
        <record id="sample_user_list" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="target">current</field>
            <field name="res_model">res.users</field>
            <field name="limit">100</field>
            <field name="auto_search" eval="True" />
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,tableau</field>
        </record>      
        

	<!-- An html -->

	<record id="sample_html" model="ir.actions.act_window">
	    <field name="name">A page</field>
	    <field name="res_model">project.task</field>
            <field name="view_mode">tree,form,tableau</field>
            <field name="arch" type="xml">
		<dash>Hello</dash>
            </field>
	</record>
        
        
   <menuitem name="Tableau" id="menu_main_pm" web_icon="tableau,static/description/icon.png" sequence="2"/>

    <menuitem id="menu_tableau" name="Dashboard" parent="menu_main_pm" sequence="1"/>
    
    <menuitem id="test" name="Coucou" parent="menu_tableau" sequence="3" action="sample_user_list"/>
    <menuitem id="test2" name="Une page" parent="menu_tableau" sequence="4" action="sample_html"/>

</odoo>
